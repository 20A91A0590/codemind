#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int a[n],i,cnt=0;
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    for(i=0;i<n-2;i++)
    {
        if((a[i]%2==0 && a[i+2]%2==0) && a[i+1]%2==0)
        {
            cnt++;
        }
    }
    cout<<cnt;
}
